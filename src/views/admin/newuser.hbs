<div class="row">
  <div class="col-md-4 mx-auto">
    <div class="card bg-black text-primary">
      <div class="card-header pt-5">
        <h4 class="text-center">
          Registra un nuevo usuario a Go Food
        </h4>
      </div>
      <div class="card-body">
        <form action="/admin/newuser" method="POST">
          <div class="mb-3">
            <label for="user">Codigo:</label>
            <input
              type="text"
              class="form-control bg-dark text-primary"
              name="user"
              placeholder="Codigo de Alumno"
              value="{{user}}"
            />
          </div>
          <div class="mb-3">
            <fieldset class="form-group">
              <label for="document_type">Tipo de documento:</label>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="document_type" id="optionsRadios1" value="Dni" checked="">
                <label class="form-check-label" for="optionsRadios1">
                  DNI
                </label>
              </div>
              <div class="form-check">
                <input class="form-check-input" type="radio" name="document_type" id="optionsRadios2" value="Carnet de extranjeria">
                <label class="form-check-label" for="optionsRadios2">
                  Carnet de Extranjeria
                </label>
              </div>
            </fieldset>
          </div>
          <div class="mb-3">
            <label for="document_number">Numero de documento:</label>
            <input
              type="text"
              class="form-control bg-dark text-primary"
              name="document_number"
              placeholder="Numero de documento"
              value="{{document_number}}"
            />
          </div>
          <div class="mb-3">
            <label for="names">Nombres:</label>
            <input
              type="text"
              class="form-control bg-dark text-primary"
              name="names"
              placeholder="Nombres"
              value="{{names}}"
            />
          </div>
          <div class="mb-3">
            <label for="last_names">Apellidos:</label>
            <input
              type="text"
              class="form-control bg-dark text-primary"
              name="last_names"
              placeholder="Apellidos"
              value="{{last_names}}"
            />
          </div>
          <div class="mb-3">
            <label for="email">Correo:</label>
            <input
              type="email"
              class="form-control bg-dark text-primary"
              name="email"
              placeholder="Correo Institucional"
              value="{{email}}"
            />
          </div>
          
          <div class="mb-3">
            <label for="address">Dirección:</label>
            <input
              type="text"
              class="form-control bg-dark text-white"
              name="address"
              placeholder="Dirección"
              value="{{address}}"
            />
          </div>
          
          <div class="mb-3">
            <label for="phone_number">Numero de Teléfono:</label>
            <input
              type="text"
              class="form-control bg-dark text-white"
              name="phone_number"
              placeholder="Numero de Teléfono"
              value="{{phone_number}}"
            />
          </div>
          
          
          <div class="mb-3">
            <label for="start_service">Fecha de Inicio del Servicio:</label>
            <input
              type="text"
              class="form-control bg-dark text-white"
              name="start_service"
              placeholder="Fecha de Inicio del Servicio"
              value="{{start_service}}"
            />
          </div>
          <div class="mb-3">
            <label for="end_service">Fecha de Fin del Servicio:</label>
            <input
              type="text"
              class="form-control bg-dark text-white"
              name="end_service"
              placeholder="Fecha de Fin del Servicio"
              value="{{end_service}}"
            />
          </div>
          <div class="mb-3">
            <label for="password">Contraseña</label>
            <input
              type="password"
              class="form-control bg-dark text-white"
              name="password"
              placeholder="Contraseña"
              value="{{password}}"
            />
          </div>
          <div class="mb-3">
            <label for="confirm_password">Confirmación de Contraseña:</label>
            <input
              type="password"
              class="form-control bg-dark text-white"
              name="confirm_password"
              placeholder="Confirmación de Contraseña"
              value="{{confirm_password}}"
            />
          </div>
          <button class="btn btn-success btn-block">
            Registrar Usuario
          </button>
        </form>
      </div>
      
    </div>
  </div>
</div>

